<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.pberrueco.pmdmu3actividad.ui.auth.LoginFragment"
        android:label="fragment_login2"
        tools:layout="@layout/fragment_login2" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.pberrueco.pmdmu3actividad.ui.auth.RegisterFragment"
        android:label="fragment_register2"
        tools:layout="@layout/fragment_register2" />
    <fragment
        android:id="@+id/taskFragment"
        android:name="com.pberrueco.pmdmu3actividad.ui.task.TaskFragment"
        android:label="fragment_task"
        tools:layout="@layout/fragment_task" >
        <action
            android:id="@+id/action_taskFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
</navigation>